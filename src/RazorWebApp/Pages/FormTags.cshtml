<h2>&lt;Input&gt; Tag</h2>

<p><b>@Model.BuddyName</b></p>
<form method="post">
    <input type="text" list="currentNames" asp-for="BuddyName" placeholder="Pick a Coding Buddy" />
    <datalist id="currentNames">
        <option>Dan Gilleland</option>
        <option>Don Welch</option>
        <option>Robbin Law</option>
        <option>Shane Bell</option>
        <option>Sam Wu</option>
    </datalist>
    <!-- You can use an input element as a button -->
    <input type="submit" value="Choose Partner" />
</form>


<div  style="background-color:aqua; padding: 10px;">
<form method="post">
    <input type="text" list="colors" asp-for="PreferredColor" placeholder="Enter a preferred color" />
    <datalist id="colors">
        @foreach(SelectListItem color in Model.ColorShortList)
        {
            <option value="@color.Value">@color.Text</option>
        }
    </datalist>
    <label>Color Search
        <input type="text" placeholder="Type part of a color name" asp-for="PartialColorName" />
    </label>
    <button type="submit" asp-page-handler="ColorSearch">Search Colors</button>
</form>
</div>
